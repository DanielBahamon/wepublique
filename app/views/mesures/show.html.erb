<div class="m-0 row g-2">
  <div class="col-8">
    <div class="blue-box mt-5 position-relative">
      <div class="votes position-absolute top-0 end-0 me-5 mt-4">
        <p><%= @mesure.votes_for.size %></p><i class="fa-solid fa-thumbs-up fa-2xl mx-1"></i>
        <p><%= @mesure.get_downvotes.size %></p><i class="fa-solid fa-thumbs-down fa-2xl mx-1"></i>
      </div>
      <h2 class="mt-3"><%= @mesure.title %></h2>
        <div class="div_status">
          <p class="mt-4 pe-3"><i class="fa-solid fa-circle-info fa-lg"></i> <%= @mesure.category.name %> </p>
          <p class="mt-4"><i class="fa-regular fa-circle-dot fa-lg"></i> <%= @mesure.status %> </p>
        </div>
        <div class="col-8">
          <p class="text-wrap fs-6 description-mesure"> <%= @mesure.content %></p>
        </div>
    <%= render partial: "shared/validation_button", locals: {mesure: @mesure} %>
      </div>
  </div>
  <%= render partial: "shared/comments_area", locals: {mesure: @mesure, comments: @comments, comment: @comment } %>
</div>

<div class="blue-box mt-3 position-relative">
  <div class="mt-3 mb-3 mx-1 d-flex justify-content-between">
     <h2><%= @mesure.title %></h2>
      <div class=" d-flex">
        <div class="ms-4 thumbs d-flex align-items-center justify-content-center">
          <%= render partial: "mesures/mesure_upvote_link", locals: {mesure: @mesure } %>
        </div>
      </div>
  </div>
    <div class="div_status">
      <p class="mt-4 ms-1"><i class="fa-solid fa-list fa-xl"></i> <%= @mesure.category.name %> </p>
      <p class="mt-4 me-1">
        <% if @mesure.status == "En cours de concertation" %>
          <i class="fa-regular fa-comment-dots fa-xl text-primary"></i>
        <% elsif @mesure.status == "Refusé" %>
          <i class="fa-solid fa-xmark fa-xl text-danger"></i>
        <% elsif @mesure.status == "Validé" %>
          <i class="fa-regular fa-square-check fa-xl text-success"></i>
        <% end %>
          <%= @mesure.status %>
      </p>
    </div>
      <div class="d-flex mt-3">
        <p class="text-wrap ps-2 fs-6 description-mesure mt-3"> <%= @mesure.content %></p>
      </div>
        <div class="partial mt-3 mb-3">
          <%= render partial: "shared/validation_button", locals: { mesure: @mesure } %>
        </div>
      </div>

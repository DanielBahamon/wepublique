<div class="row gap-3">
  <h2 class='text-center mt-3'>Ajouter une nouvelle mesure</h2>
      <%= simple_form_for @observation, :html=> { class: 'blue-box col-4' } do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :dangerosity, as: :select, collection: [1,2,3,4,5] %>
        <%= f.input :latitude, as: :hidden %>
        <%= f.input :longitude, as: :hidden %>
        <%= f.association :category %>
    <div class="form-actions mt-5 mb-3 text-center">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
    <% end %>

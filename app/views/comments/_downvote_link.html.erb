<%= content_tag "div", id: "downvote-#{comment.id}", data: { comment_vote_target: 'downvoteArea'} do %>
    <%= link_to downvote_comment_path(comment), data: { action: "click->comment-vote#vote", disable_with: "voting..." }, class: "comment-votes" do %>
    <% if current_user.voted_down_on? comment %>
      <%= comment.cached_votes_down %><i class="fas fa-thumbs-down"></i>
    <% else %>
      <%= comment.cached_votes_down %><i class="far fa-thumbs-down"></i>
    <% end %>
  <% end %>
<% end %>

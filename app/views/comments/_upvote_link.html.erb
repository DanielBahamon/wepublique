<%= content_tag "div", id: "upvote-#{comment.id}", data: { comment_vote_target: 'upvoteArea' } do %>
  <%= link_to upvote_comment_path(comment), data: { turbo_method: :patch, action: "click->comment-vote#vote", disable_with: "voting..." }, class: "comment-votes" do %>
    <% if current_user %>
      <% if current_user.voted_up_on?(comment) %>
        <%= comment.cached_votes_up %><i class="fas fa-thumbs-up"></i>
      <% else %>
        <%= comment.cached_votes_up %><i class="far fa-thumbs-up"></i>
      <% end %>
    <% else %>
      <%= comment.cached_votes_up %><i class="far fa-thumbs-up"></i>
    <% end %>
  <% end %>
<% end %>

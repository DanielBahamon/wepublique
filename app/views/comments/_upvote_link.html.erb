<% if current_user %>
  <%= content_tag "div", id: "upvote-#{comment.id}", data: { comment_vote_target: 'upvoteArea'} do %>
    <%= link_to upvote_comment_path(comment), data: { action: "click->comment-vote#vote", disable_with: "voting..." }, class: "comment-votes" do %>
      <% if current_user.voted_up_on? comment %>
        <%= comment.cached_votes_up %><i class="fas fa-thumbs-up"></i>
      <% else %>
        <%= comment.cached_votes_up %><i class="far fa-thumbs-up"></i>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <div class="comment-votes">
    <div class="m-1">
      <%= comment.cached_votes_up %>
    </div>
    <i class="far fa-thumbs-up"></i>
  </div>
<% end %>

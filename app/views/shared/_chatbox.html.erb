<button id="chat-button" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo" data-action="click->chatroom-subscription#scrollDown">
  <i class="fa-regular fa-comments"></i>
</button>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="container chatroom"
      data-controller="chatroom-subscription"
      data-chatroom-subscription-chatroom-id-value="<%= chatroom.id %>">
        <div class="modal-header p-0">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Le Caf√© du coin</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="messages" data-chatroom-subscription-target="messages">
          <% chatroom.messages.each do |message| %>
            <%= render "shared/message", message: message %>
          <% end %>
        </div>
        <%= simple_form_for [chatroom, message], html: { data: { action: "turbo:submit-end->chatroom-subscription#resetForm" }, class: "d-flex" } do |f| %>
          <%= f.input :content, label: false, placeholder: "Discutez", wrapper_html: {class: "flex-grow-1"}%>
          <%= f.submit "Send", class: "btn btn-primary mb-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if current_user && current_user.mayor && mesure.status == "En cours de concertation"%>
  <div class="d-flex gap-2 justify-content-center flex-column">
    <%= link_to "Valider cette mesure", mesure_path(mesure, m: "Validé"), class:"btn btn-primary btn-validation",data: { turbo_method: :patch, turbo_confirm: "Etes vous sûr de vouloir changer le statut de cette mesure ?" } %>
    <%= link_to "Refuser cette mesure", mesure_path(mesure, m:"Refusé"), class:"btn btn-danger btn-validation",data: { turbo_method: :patch, turbo_confirm: "Etes vous sûr de vouloir changer le statut de cette mesure ?" } %>
  </div>
<% end %>

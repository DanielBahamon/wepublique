<div class="col-8">
  <div class="blue-box">
    <h3><%= title %></h3>
    <% mesures.each do |mesure| %>
      <%= link_to mesure do %>
        <div class="item">
          <h3><%= mesure.title %></h3>
          <div class="d-flex">
            <p class="date">Discuté depuis le <%= mesure.created_at.strftime("%e %b à %H:%M") %> </p>
            <%= render partial: "shared/mesure_likes", locals: {mesure: mesure } %>
          </div>
        </div>
        <div class="item mt-0 mb-2">
          <p>"<%= mesure.content.slice(0..250) %>..."</p>
          <p>Catégorie : <%= mesure.category.name %></p>
        </div>
      <% end %>
    <% end %>
    <div class="d-flex justify-content-end">
      <% pages.each do |n| %>
        <div class="page-link">
          <%= link_to "#{n}", mesures_path(mesures: params[:mesures],:page => n)%>
        </div>
      <% end %>
    </div>
  </div>
</div>
